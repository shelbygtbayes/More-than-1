class Solution {
public:
    int twoCitySchedCost(vector<vector<int>>& costs) {
   
        sort(costs.begin(),costs.end(),[](const vector<int>&u,const vector<int>&v){   
            return abs(u[0]-u[1]) > abs(v[0]-v[1]);
        });
        int a = 0, b = 0,t = 0;
        // costs.size() --> 2n
        for(int i = 0;i < costs.size();i++)
        {
           // a < n                and       b < n  
            if(a < costs.size() >> 1 and b < costs.size() >> 1 )
            { 
                if(costs[i][0] < costs[i][1])
                {
                    a++;
                    t += costs[i][0];
                }
                else
                {
                    b++;
                    t += costs[i][1];
                }
            }
             // a == n // Then pick all from b
            else if(a == costs.size() >> 1 )
            {
                b++;
                t+= costs[i][1];
            }
             // b == n Then pick all from a
            else
            {
                a++;
                t+= costs[i][0];
            }
        }
        return t;
    }
};
